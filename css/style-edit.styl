//@import '_constant.styl'
@import '_include-stylus.styl'
.header-info
	align-items: center

//staff LP
.staff
	width: 100%
	height: 100%
	background: white
	margin-top: -20px
	margin-bottom: -30px

.staff-banner
	+below(640px)
		padding: 25%
	bg-full()
	width: 100%
	padding: 10% 20%
	background-position: top center
	position: relative
	flex(mid)
	fl()
.staff-banner__filter
	position: absolute
	width: 100%
	height: 100%
	left 0
	top 0
	background: rgba(0, 0, 0, 0.6)

.staff-banner__title
	+below(768px)
		font-size: 26px
	+below(640px)
		font-size: 22px
		text-transform: none
		width: 100%
	text-align: center
	font-size: 38px
	color white
	font-weight:bold
	up()
	margin-bottom: 20px
.staff-banner__title-sub
	+below(640px)
		display: none
	text-align: center
	font-size: 14px
	color white
	opacity:.8
	max-width 60%
	margin-bottom: 5%
.staff-banner__content
	+below(640px)
		min-width 300px
	max-width 800px
	z-index 2
	position: relative
	flex(mid)
	fl()
.staff-banner__get
	padding: 10px 30px;
	background: #ff8100
	color: white
	box-shadow: inset 0 0 0 rgba(243,128,12,0.33);
	border-radius: 2px;
	border: 2px solid #ea3d03;
	cp()

.staff-advant
	+below(768px)
		fw()
		padding: 30px 0
	flex(between)
	padding: 70px 0
.staff-advant__el
	+below(768px)
		width: 48%
		justify-content: flex-start
		margin-bottom: 20px
	+below(640px)
		width: 100%
	flex(mid)
	width: 24%
.staff-advant__el-img
	+below(768px)
		size 60px
	size 80px
	margin-right: 20px

.staff-title
	+below(768px)
		font-size: 28px
	font-weight:700
	font-size: 38px
	margin-bottom: 20px
	padding-bottom: 20px
	position: relative
	&:before
		content ''
		position: absolute
		height: 5px
		width: 100px
		background: #f57023
		bottom 0px
		left 50%
		margin-left: -50px
	text-align: center
.staff-title__sub
	+below(768px)
		margin-bottom: 30px
	margin-bottom: 70px
	text-align: center
	opacity:.8

.tab
	+below(768px)
		margin-bottom: 30px
	margin-bottom: 70px
.tab-head
	+below(768px)
		display: none
	f()
.tab-head__el
	+below(768px)
		width:calc(100% / 6)
		padding: 10px
	width: 100%
	padding: 20px
	cp()
	&:nth-child(odd)
		background: #F2F2F2
	&:nth-child(even)
		background: #fafafa
.tab-head__el--active
	background: #3B6BB0!important
	border-radius 20px 20px 0 0
	margin-top: -20px
	padding-top: 40px
	.tab-head__el-val
		color white
	.tab-head__el-text
		color white
.tab-head__el-val
	+below(768px)
		font-size: 22px
		margin-bottom: 10px
	color black
	font-size: 38px
	margin-bottom: 20px
	font-weight:bold

.tab-head__el-text
	color black
//.tab-content
.tab-content__el
	+below(768px)
		display: block
		margin-bottom: 30px
		position: relative
	border-radius 0 0px 20px 20px
	display: none
	padding: 50px 30px
	color white
	background: #3B6BB0!important
	bsh()
	p
		opacity:.8
		line-height: 1.6
.tab-content__el-numb
	position: absolute
	font-size: 18px
	font-weight:bold
	color white
	top 0px
	right: 0px
	padding: 20px
	background: #f57023
	+above(768px)
		display: none
.tab-content__el--active
	display: block
.tab-content__el-title
	+below(768px)
		font-size: 18px
	font-size: 28px
	up()
	font-weight:bold
	margin-bottom: 50px
	position: relative
	&:before
		content ''
		height: 3px
		width: 70px
		background: #f57023
		position: absolute
		bottom -20px
		left 0

//.tab-content__el-text

.solution-wrap
	+below(768px)
		margin: 30px 0
	+below(640px)
		margin-top: 0
	margin: 0 0 70px 0
.solution
	f()
	justify-content: space-between
	fw()
.solution__el
	+below(768px)
		width: 48%
	+below(480px)
		width: 100%
	width: 32%
	margin-bottom: 30px
.solution__img
	bg-full()
	padding: 30% 20%
	background-position: top center
	margin-bottom: 20px

.solution__title
	font-size: 18px
	margin-bottom: 20px
	font-weight:bold

.solution__text
	line-height: 1.6

.slider-items-clients--light
		box-shadow 0 0 0!important
.vacancy
	f()
	justify-content: space-between
.vacancy-img
	+below(768px)
		width: 30%
		img
			width: 100%
	+below(640px)
		display: none
	width: 48%
.vacancy__content
	+below(768px)
		width: 68%
	+below(640px)
		width: 100%
	width: 48%
.vacancy__el
	f()
	margin-bottom: 30px
.vacancy__el-icon
	img
		+below(640px)
			size 40px
			margin-right: 20px
		size 50px
		margin-right: 30px
.vacancy__el-content
	+below(640px)
		width:calc(100% - 60px)
	width:calc(100% - 100px)

.vacancy__el-title
	+below(640px)
		font-size: 16px
	font-weight:700
	font-size: 20px
	margin-bottom: 10px
.vacancy__el-text
	line-height: 1.6
	opacity:.8
	font-size: 14px

.get-vacancy
	background: #f0f0f0
	padding: 30px 0
.get-vacancy__wrap
	+below(768px)
		fl()
		flex(mid)
		padding: 10px
	f()
	justify-content: space-between
	align-items: center
	max-width 768px
	margin-left: auto
	margin-right: auto
.get-vacancy__icon
	img
		+below(768px)
			margin-right: 0
		size 60px
		margin-right: 30px
.get-vacancy__text
	+below(768px)
		margin: 20px
		text-align: center
	line-height: 1.6
.get-vacancy__btn
	padding: 10px 30px;
	background: #ff8100
	color: white
	box-shadow: inset 0 0 0 rgba(243,128,12,0.33);
	border-radius: 2px;
	width: 300px
	border: 2px solid #ea3d03;
	cp()
	text-align: center
//staff LP===end
